<%- include("partials/header"); -%>
<link rel="stylesheet" href="/css/guess.css">
<% if(authenticated) { %>
<%- include("partials/navUser"); -%>
<% } else { %>
<%- include("partials/nav") -%>
<% } %>



<main class="container">
  <div class="columns">
    <div class="column">
      <button type="button" class="button" name="button" onClick="loadRandom()">Previous One</button>
    </div>
    <div class="colum">
      <h1 class="title" id="guessDish"><%= randomRecipe.dish %></h1>
    </div>
    <div class="column">
      <button type="button" class="button is-pulled-right" name="button" onClick="loadRandom()">Another One</button>
    </div>
  </div>

  <div class="columns imgIng">
    <img id="guessImage" class="column is-9" onclick="goToRecipe('<%= randomRecipe.id %>')" src="<%= randomRecipe.image %>" alt="">
    <p class="column" id="guessDescription">
      <%= randomRecipe.description %>
    </p>
  </div>

</main>

<script src="js/guess.js">

</script>
<%- include("partials/footer"); -%>
